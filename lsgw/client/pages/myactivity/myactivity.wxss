.content-img{
  overflow: hidden;
  position: relative;
  width:270rpx;
  height:220rpx;
}
.img-icon{
  position: absolute;
  top:4rpx;
  left:-68rpx;
  transform: rotate(-45deg);
  width:180rpx;
  height:40rpx;
  z-index: 99;
  background-color:#63B8FF;
  font-size:10px;
  color:white;
  text-align: center;
  line-height: 40rpx;
}
.title{
  font-size:14px;
  color:#4d4b4c;
  font-weight: bold;
  height:100rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.index-img{
  width:270rpx;
  height:220rpx;
  border-radius:6px;
}
.contetn-box{
  padding-left:10rpx;
  position: relative;
  width:450rpx;
}
.contet-list{
  padding:12rpx 0;
}
.list-name{
  font-size:12px;
  color:#a49fa1;
}
.list-number{
  font-size:12px;
  color:#fac421;
  padding-left:6rpx;
  font-weight: bold;
}
.list-type{
  width:100%;
  height:19px;
  border-radius: 30rpx;
  line-height: 19px;
  text-align: center;
  font-size:12px;
}
.list-type{
  height:19px;
  border-radius: 30rpx;
  line-height: 19px;
  text-align: center;
  font-size:12px;
  position: absolute;
  right:10rpx;
  bottom:18rpx;
  width:130rpx;
}
/*报名进行中  */
.conduct-type{
  background-color:#63B8FF;
  color:white;
}
/*报名人数已满  */
.full-type{
  background-color:#f45f05;
  color:white;
}
/*活动已结束  */
.end-type{
  background-color:#cccccc;
  color:#676767;
}