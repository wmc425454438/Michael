  border-radius: 4px;
  padding: 8px;
  display: inline;
  background-color: #63B8FF;
  color: white;
}

.my-modal {
  margin: 50vh auto 0;
  transform: translateY(-50%);
  width: 80%;
  height: 80%;
  background-size: cover;
  background-color: white;
  border-radius: 20rpx;
  z-index: 600;
}
.cancel-icon{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  bottom: 3%;
  left: 350rpx;
  z-index: 601;
}
.close-icon{
  position: absolute;
  width: 75rpx;
  height: 75rpx;
  bottom: 2%;
  left: 50%;
  transform: translateX(-50%);
  z-index: 601;
}
.top-container{
  font-size: 40rpx;
  width: 100%;
  height: 20%;
  background-color: #63B8FF;
  border-radius: 20rpx 20rpx 0 0;
}
.content {
  text-align: justify;
  font-size: 30rpx;
  height: 80%;
  width: 100%;
  border-radius: 0 0 20rpx 20rpx;
  background-color: white;
}
.scroll-content {
  width: 100%;
  height: 90%;
}
.bottom-content {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 10%;
  border-radius: 0 0 20rpx 20rpx;
  background-color: white;
  font-size: 20rpx;
}
.modal-container{
  z-index: 600;
  position: fixed;
  background-color: rgba(0,0,0, .7);
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  pointer-events: auto;
}
.logitem-container {
  position: relative;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
}
.logitem {
  padding: 20px;
  position: relative;
}
.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 20px 0 10px;
  border-right: 1px solid #9e9e9e;
}
.down {
  font-size: 20rpx;
}
.ok-icon {
  position: absolute;
  z-index: 700;
  -webkit-z-index: 700;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  left: 0;
  transform: translate(-50%, -50%);
  background-color: white;
}

.icon-img {
  width: 50rpx;
  height: 50rpx;
}

.logitem-container:first-child .ok-icon::before {
  content: "";
  position: absolute;
  z-index: 650;
  width: 10px;
  height: 50px;
  top: -50px;
  left: 50%;
  background-color: white;
  transform: translateX(-50%);
}

.logitem-container:last-child .ok-icon::after {
  content: "";
  position: absolute;
  z-index: 650;
  width: 10px;
  height: 50px;
  left: 50%;
  bottom: -50px;
  background-color: white;
  transform: translateX(-50%);
}

